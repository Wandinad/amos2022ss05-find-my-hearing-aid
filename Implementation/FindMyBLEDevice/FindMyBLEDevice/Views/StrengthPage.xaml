<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMyBLEDevice.Views.StrengthPage"
             Title="{Binding Title}">
    
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="20,0,20,0" Spacing="0">
            <Label Text="Show bluetooth connection strength" FontSize="Medium" TextColor="Black"/>
            <Label FontSize="16" Padding="0,0,0,0">
            </Label>
            <Label Text="Currently selected device:" FontSize="Small" TextColor="Black"/>
            <Label Text="{Binding BT_id}" FontSize="Small" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>